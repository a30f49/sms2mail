<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.Sms2mail" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/system_bar_color_dark</item>
        <item name="colorPrimaryVariant">@color/system_bar_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color - 透明以显示系统状态栏 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Action bar color - 与状态栏保持一致 -->
        <item name="colorSurface">@color/system_bar_color_dark</item>
        <!-- 启用沉浸式状态栏 -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>